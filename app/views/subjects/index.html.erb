<p id="notice"><%= notice %></p>

<% if current_user %>


<h1>Subjects</h1>

<table>
  <thead>
    <tr>
      <th>S.no</th>
      <th>Name</th>
      <th>marks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <!-- <#% @subjects.each do |subject| %> -->
    <% current_user.subjects.each_with_index do |subject,index| %>

      <tr>
        <td><%= index+1 %></td>
        <td><%= subject.user.fname %></td>
        <td><%= subject.marks %></td>
         <td><%= link_to 'Show', subject %></td>
         <!-- <td><#%= link_to 'Add', new_subject_path %></td> -->
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<table>
  <tbody>
    <tr>
<td><%= link_to 'Sign_out', destroy_user_session_path, method: :delete %></td>
<td><%= link_to 'Add', new_subject_path %></td>
    </tr>
  </tbody>
</table>

<% else %>

<%= link_to 'Create Account', new_user_registration_path %>
<%= link_to 'Sign In', new_user_session_path %>

